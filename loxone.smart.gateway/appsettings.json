{
  "Logging": {
    "Console": {
      "FormatterName": "simple",
      "FormatterOptions": {
        "TimestampFormat": "[yyyy-MM-dd HH:mm:ss] ",
        "UseUtcTimestamp": false
      }
    },
    "LogLevel": {
      "Default": "Warning",
      "Microsoft.AspNetCore": "Warning"
    },
    "File": {
      "Path": "app.log",
      "Append": true,
      "MinLevel": "Warning", 
      "FileSizeLimitBytes": 0,
      "MaxRollingFiles": 0
    }
  },
  "Api": {
    "PhilipsHueConfiguration": {
      "IP": "",
      "AccessKey": ""
    }
  },
  "Configuration": {
    "EnablePrometheus": false
  },
  "AllowedHosts": "*"
}
